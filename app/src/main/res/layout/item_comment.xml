<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--Layout not shimmer-->
        <LinearLayout
            android:id="@+id/layoutNotShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    app:civ_border_color="@color/background_top_login"
                    app:civ_border_width="@dimen/_1sdp"
                    tools:src="@drawable/meow" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/background_corner_brown"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/textViewNameUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingStart="@dimen/_15sdp"
                        android:textAlignment="textStart"
                        android:textIsSelectable="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:text="Duy Khang" />

                    <TextView
                        android:id="@+id/textViewComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textAlignment="textStart"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        tools:text="Với tổng giá trị đạt ngưỡng 200 triệu USD (hơn 4.500 tỷ đồng), số Bitcoin trên được chia thành 2 giao dịch, mỗi đợt bao gồm 5.000 BTC. Sau đó, cả 2 đều được chia thành nhiều giao dịch nhỏ hơn, dao động 47,98-200 BTC cho một giao dịch." />

                    <TextView
                        android:id="@+id/textViewTimeComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:textAlignment="textStart"
                        android:textColor="#989898"
                        android:textSize="@dimen/_10sdp"
                        tools:text="12 hours ago" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_1sdp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RelativeLayout
                        android:id="@+id/layoutDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/LayoutRippleEffectWhite"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_delete"
                            android:textColor="#515151"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/LayoutRippleEffectWhite"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_edit"
                            android:textColor="#515151"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--Layout shimmer-->
        <LinearLayout
            android:id="@+id/layoutShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:visibility="gone">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_shimmer_circle" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/background_corner_brown"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_15sdp"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textAlignment="textStart"
                    android:textColor="#989898"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</layout>


